        <thead>
        <tr>
            <th class="check">-</th>
            <th>스킬명</th>
            <th class="input">수량</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td colspan="3" >전투 스킬</td>
        </tr>
        {% for k, v in _M['HERO_SKILL'] | sort | filter(s => s.type == 'D') %}
            <tr>
                <td class="check"><input type='checkbox' value='{{ v.m_hero_skil_pk }}' /></td>
                <td>{{ v.title }} Lv.{{ v.rare }}</td>
                <td class="input"><input type='number' id='m_skill_{{ v.m_hero_skil_pk }}' min="0" max="99" value="0" style='width:40px' /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
