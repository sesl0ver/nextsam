<style>
	.ns_table_common {
		width: 100%;
		border-spacing: 0;
	}

	.ns_table_common table {
		border-spacing: 0;
		width:100%;
	}

	.ns_table_common thead > tr {
		height: 30px;
		line-height: 30px;
		padding: 5px 10px;
		background: #2B3C57;
		color: #B4D2EC;
		text-align: center;
		font-size: .75rem;
		border-radius: 3px;
		-webkit-border-radius: 3px;
		-moz-border-radius: 3px;
